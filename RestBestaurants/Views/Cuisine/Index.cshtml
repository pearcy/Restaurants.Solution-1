@{
  Layout = "_Layout";
}

@using RestBestaurants.Models;
@model List<RestBestaurants.Models.Cuisine>;

<h1>Type of Cuisines</h1>

@if (@Model.Count == 0)
{
  <h3>No Cuisine categories have been added yet!</h3>
} 

@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.Description}", "Details", new { id = cuisine.CuisineId })</li>
}

<p>@Html.ActionLink("Add new category", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>