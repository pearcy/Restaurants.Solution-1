@{
  Layout = "_Layout";
}

@using RestBestaurants.Models;
@model List<RestBestaurants.Models.Restaurant>;

<h1>Restuarants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Name</li>
}

<p>@Html.ActionLink("Add new restuarant", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>